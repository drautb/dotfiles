#!/usr/bin/env bash

# Debian-specific setup

set -eux

sudo add-apt-repository ppa:phoerious/keepassxc

sudo apt update

sudo apt install -y zsh \
  tmux \
  htop \
  vim \
  git \
  curl \
  wget \
  keepassxc

if [[ ! "$SHELL" =~ "zsh" ]]; then
  chsh -s "$(command -v zsh)"
fi

{{ end -}}
